{
  "id": {
    "type": "integer"
  },

  "id_and_type": {
    "type": "object",
    "required": ["id", "type"],
    "properties": {
      "id": { "$ref": "#/id" },
      "type": "string"
    }
  },

  "ids": {
    "type": "array",
    "items": { "$ref": "#/id" }
  },

  "ids_and_types": {
    "type": "array",
    "items": { "$ref": "#/id_and_type" }
  },

  "post": {
    "type": "object",
    "required": ["author_id", "id"],
    "properties": {
      "author_id": { "$ref": "#/id" },
      "id": { "$ref": "#/id" }
    }
  },

  "posts": {
    "type": "array",
    "items": { "$ref": "#/post" }
  },

  "user": {
    "type": "object",
    "required": ["id", "post_ids"],
    "properties": {
      "id": { "$ref": "#/id" },
      "post_ids": { "$ref": "#/ids" }
    }
  },

  "users": {
    "type": "array",
    "items": { "$ref": "#/user" }
  }
}
